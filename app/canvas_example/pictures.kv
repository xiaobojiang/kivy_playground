#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            source: 'background.jpeg'
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Label: 
            height: 24
            text_size: self.width, None
            color: (1,1,1,0.8)
            text: 'Kivy {}'.format(kivy.__version__)


<Picture>:
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    Image:
        id: image
        source: root.source

        #init size
        size: 400, 400/self.image_ratio

        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'shadow32.png'
                border: (36,36,36,36)
                size: (self.width+72, self.height+72)
                pos: (-36,-36)