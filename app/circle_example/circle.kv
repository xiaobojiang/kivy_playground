#:kivy 2.0.0
<window>:
    e1: e1
    e2: e2
    hm: hm
    wm: wm
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            size_hint_y: None
            height: sp(100)
            BoxLayout:
                orientation: 'vertical'
                Slider:
                    id: e1
                    min: -360.
                    max: 360.
                Label:
                    text: 'angle_start = {}'.format(e1.value)
            BoxLayout:
                orientation: 'vertical'
                Slider:
                    id: e2
                    min: -360.
                    max: 360.
                    value: 360.
                Label:
                    text: 'angle_end = {}'.format(e2.value)
        BoxLayout:
            size_hint_y: None
            height: sp(100)
            BoxLayout:
                orientation: 'vertical'
                Slider:
                    id: wm
                    min: 0
                    max: 2
                    value: 1
                Label:
                    text: 'width mult. = {}'.format(wm.value)

            BoxLayout:
                orientation: 'vertical'
                Slider:
                    id: hm
                    min: 0
                    max: 2
                    value: 1
                Label:
                    text: 'heght mult. = {}'.format(hm.value)
            Button:
                text: 'Reset ratios'
                on_press: wm.value=1;hm.value=1
        
            FloatLayout:
                canvas:
                    Color: 
                        rgb: 1,1,1
                    Ellipse:
                        pos: root.width/2-sp(100),root.height/2
                        size: sp(200)* wm.value, sp(200)*hm.value
                        source: 'lunar.png'
                        angle_start: e1.value
                        angle_end: e2.value
