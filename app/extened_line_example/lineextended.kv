#:kivy 1.0
<LineEllipse1>:
    canvas:
        Color: 
            rgba: 1, 0.1, 0.1, 0.9
        Line:
            width: 2.
            ellipse: (self.x, self.y, self.width, self.height)
    Label:
        center: root.center
        text: 'Ellipse'
    
<LineEllipse2>:
    canvas:
        Color: 
            rgba: 1, 0.1, 0.1, 0.9
        Line:
            width: 2.
            ellipse: (self.x, self.y, self.width, self.height, 90, 180)
    Label:
        center: root.center
        text: 'Ellipse from angle 90 to 180'

<LineEllipse3>:
    canvas:
        Color: 
            rgba: 1, 0.1, 0.1, 0.9
        Line:
            width: 2.
            ellipse: (self.x, self.y, self.width, self.height, 90, 720, 10)
    Label:
        center: root.center
        text: 'Ellipse from 90 to 720 \\n10 segments'
        halign: 'center'

<LineCircle1>:
    canvas:
        Color:
            rgba: 0.1,1,0.1,0.9
        Line:
            width: 2.
            circle: (self.center_x, self.center_y, min(self.width, self.height)/2)
    Label:
        center: root.center
        text: 'Circle'

<LineCircle2>:
    canvas:
        Color:
            rgba: 0.1,1,0.1,0.9
        Line:
            width: 2.
            circle: (self.center_x, self.center_y, min(self.width, self.height)/2, 90, 180)
    Label:
        center: root.center
        text: 'Circle from 90 to 180'

<LineCircle3>:
    canvas:
        Color:
            rgba: 0.1,1,0.1,0.9
        Line:
            width: 2.
            circle: (self.center_x, self.center_y, min(self.width, self.height)/2, 90, 180, 10)
    Label:
        center: root.center
        text: 'Circle from 90 to 180\\n10 segments'

<LineCircle4>:
    canvas:
        Color:
            rgba: 0.1,1,0.1,0.9
        Line:
            width: 2.
            circle: (self.center_x, self.center_y, min(self.width, self.height)/2, 0, 360)
    Label:
        center: root.center
        text: 'Circle from 0 to 360'
        halign: 'center'

<LineRectangle>:
    canvas:
        Color:
            rgba: 0.1,0.1,1,0.9
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
    Label:
        center: root.center
        text: 'Rectangle'

<LineBezier>:
    canvas:
        Color: 
            rgba: 0.1, 0.1, 1, 0.9
        Line:
            width: 2.
            bezier:
                (self.x, self.y, self.center_x - 40, self.y + 100,
                self.center_x + 40, self.y - 100, self.right, self.y)
    Label:
        center: root.center
        text: 'Bezier'
