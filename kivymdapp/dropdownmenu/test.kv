<Root>:
    MDRaisedButton:
        id: button1
        text: "PRESS ME"
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release: root.menu.open()

    MDTextField:
        id: button
        pos_hint: {'center_x': .5, 'center_y': .8}
        size_hint_x: None
        width: "200dp"
        hint_text: "Port"
        on_focus: if self.focus: root.menu.open()